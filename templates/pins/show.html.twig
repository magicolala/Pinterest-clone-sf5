{% extends 'base.html.twig' %}

{% block title %}{{ pin.title }}{% endblock %}

{% block body %}
    <h1>Show</h1>

    <h3>{{ pin.title }}</h3>
    <p>{{ pin.description }}</p>
    <a href="{{ path('app_pins_edit', {"id": pin.id}) }}">Edit</a> |
    <a href="{{ path('app_pins_delete', {"id": pin.id}) }}" onclick="event.preventDefault(); confirm('Are you sure ?') && document.getElementById('js-pin-delete-form').submit();">Delete</a> |
    <a href="{{ path('app_home') }}">Back</a>


    <form id="js-pin-delete-form" action="{{ path('app_pins_delete', {"id": pin.id}) }}" method="post" style="display: none;">
        <input type="hidden" name="_method" value="DELETE">
    </form>
{% endblock %}
