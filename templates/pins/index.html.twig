{% extends 'base.html.twig' %}

{% block title %}Find all the best pins on earth !{% endblock %}

{% block body %}
    <h1>Pins Index</h1>
    <a href="{{ path('app_pins_create') }}">Create Pin</a>
    <h1>{{ pluralize(pins|length, 'Pin', 'Pins') }}</h1>
    {% for pin in pins %}
        <article>
            <h2><a href="{{ path('app_pins_show', {'id': pin.id}) }}">{{ pin.title }}</a></h2>
            <p>{{ pin.description }}</p>
        </article>
    {% else %}
        <p>Sorry, no pins yet !</p>
    {% endfor %}
{% endblock %}
