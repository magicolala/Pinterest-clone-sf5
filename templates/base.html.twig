<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Askbootstrap">
    <meta name="author" content="Askbootstrap">
    <!-- Favicon Icon -->
    <link rel="icon" type="image/png" href="{{ asset('img/logo.png') }}">
    <!-- Bootstrap core CSS-->
    <link href="https://askbootstrap.com/preview/vidoe-v2-1/theme-five/vendor/bootstrap/css/bootstrap.min.css"
          rel="stylesheet">
    <!-- Custom fonts for this template-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- Custom styles for this template-->
    <link href="https://askbootstrap.com/preview/vidoe-v2-1/theme-five/css/osahan.css" rel="stylesheet">
    <!-- Owl Carousel -->
    <link rel="stylesheet"
          href="https://askbootstrap.com/preview/vidoe-v2-1/theme-five/vendor/owl-carousel/owl.carousel.css">
    <link rel="stylesheet"
          href="https://askbootstrap.com/preview/vidoe-v2-1/theme-five/vendor/owl-carousel/owl.theme.css">

    <link rel="stylesheet" href="{{ asset('css/custom.css') }}">
    {% block stylesheets %}{% endblock %}
</head>
<body>

<nav class="navbar navbar-expand navbar-light bg-white static-top osahan-nav sticky-top">
    &nbsp;&nbsp;
    <button class="btn btn-link btn-sm text-secondary order-1 order-sm-0" id="sidebarToggle">
        <i class="fa fa-bars" aria-hidden="true"></i>
    </button> &nbsp;&nbsp;
    <a class="navbar-brand mr-1 text-white" href="{{ path('app_home') }}"><img src="{{ asset('img/logo.png') }}" alt="" width="20px">&nbsp;Pinterest</a>
    <!-- Navbar Search -->
    <form class="d-none d-md-inline-block form-inline m-auto mr-0 mr-md-5 my-2 my-md-0 osahan-navbar-search">
        <div class="input-group">
            <input type="text" class="form-control" placeholder="Search for...">
            <div class="input-group-append">
                <button class="btn btn-light" type="button">
                    <i class="fa fa-search" aria-hidden="true"></i>
                </button>
            </div>
        </div>
    </form>
    <!-- Navbar -->
    <ul class="navbar-nav ml-auto ml-md-0 osahan-right-navbar">
        {% if app.user %}

            <li class="nav-item mx-1">
                <a class="nav-link" href="{{ path('app_pins_create') }}">
                    <i class="fa fa-plus-circle" aria-hidden="true"></i>
                    New Pin
                </a>
            </li>
            <li class="nav-item dropdown no-arrow osahan-right-navbar-user">
                <a class="nav-link dropdown-toggle user-dropdown-link" href="#" id="userDropdown" role="button"
                   data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Hello, {{ app.user.username }}
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                    <a class="dropdown-item" href="account.html"><i class="fas fa-fw fa-user-circle"></i> &nbsp; My
                        Account</a>
                    {#                <a class="dropdown-item" href="subscriptions.html"><i class="fas fa-fw fa-video"></i> &nbsp;#}
                    {#                    Subscriptions</a>#}
                    {#                <a class="dropdown-item" href="settings.html"><i class="fas fa-fw fa-cog"></i> &nbsp; Settings</a>#}
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="{{ path('app_logout') }}"><i class="fa fa-sign-out" aria-hidden="true"></i>
                        &nbsp; Logout</a>
                </div>
            </li>
        {% else %}
            <li class="nav-item">
                <a class="nav-link" href="{{ path('app_login') }}">Se connecter</a>
            </li>
        {% endif %}
    </ul>
</nav>
<div id="wrapper">
    <!-- Sidebar -->
    <ul class="sidebar navbar-nav">
        <li class="nav-item active">
            <a class="nav-link" href="{{ path('app_home') }}">
                <i class="fa fa-home" aria-hidden="true"></i>
                <span>Home</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="channels.html">
                <i class="fa fa-list-alt" aria-hidden="true"></i>
                <span>Catégories</span>
            </a>
        </li>
    </ul>
    <div id="content-wrapper">
        <div class="container-fluid" style="min-height: 95vh;">
            {% block body %}{% endblock body %}
        </div>
        <!-- /.container-fluid -->
        <!-- Sticky Footer -->
        <footer class="sticky-footer"
{#                style="position: absolute; bottom: 0; width: 100%; margin-left: 0;"#}
        >
            <div class="container">
                <div class="row no-gutters">
                    <div class="col-lg-6 col-sm-6">
                        <p class="mt-1 mb-0">© Copyright {{ "now"|date("Y") }} <strong class="text-dark">Cédric Oloa</strong>. All Rights
                            Reserved<br>
                            <small class="mt-0 mb-0">Made with <i class="fa fa-heart text-danger" aria-hidden="true"></i> by <a
                                        class="text-primary" target="_blank" href="#">Cédric Oloa</a>
                            </small>
                        </p>
                    </div>
                    <div class="col-lg-6 col-sm-6 text-right">
                        <div class="app">
                            <a href="#"><img alt="" src="img/google.png"></a>
                            <a href="#"><img alt="" src="img/apple.png"></a>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </div>
    <!-- /.content-wrapper -->
</div>
{#    <nav>#}
{#        <ul>#}
{#            <li><a href="{{ path('app_home') }}">Home</a></li>#}
{#            <li><a href="{{ path('app_pins_create') }}">New Pin</a></li>#}
{#        </ul>#}
{#    </nav>#}

<!-- Bootstrap core JavaScript-->
<script src="https://askbootstrap.com/preview/vidoe-v2-1/theme-five/vendor/jquery/jquery.min.js"></script>
<script src="https://askbootstrap.com/preview/vidoe-v2-1/theme-five/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
<!-- Core plugin JavaScript-->
<script src="https://askbootstrap.com/preview/vidoe-v2-1/theme-five/vendor/jquery-easing/jquery.easing.min.js"></script>
<!-- Owl Carousel -->
<script src="https://askbootstrap.com/preview/vidoe-v2-1/theme-five/vendor/owl-carousel/owl.carousel.js"></script>
<!-- Custom scripts for all pages-->
<script src="https://askbootstrap.com/preview/vidoe-v2-1/theme-five/js/custom.js"></script>
<script src="https://unpkg.com/masonry-layout@4/dist/masonry.pkgd.js"></script>
{% block javascripts %}{% endblock %}
</body>
</html>
